                            </li>
                            <li class="nav-item">
                                <a href="{{ path('advanced_search')}}">Recherche avancée</a>
                            </li>
                            <li class="nav-item">
                              <a href="{{ path('search')}}">Recherche simple</a>
                            </li>
                            <li class="nav-item">
                                <a href="">Random</a>
                            </li>
                        </div>

                        <a href="{{ path('advanced_search') }}"><img src="{{ asset('pictures/logo/logo.png') }}" class="website-logo" /></a>

                        <div class="nav-desktop-right">
                        {% if app.user %}
                            <li class="nav-item">
                                <a href="{{ path('user_show', { 'id' : app.user.id }) }}">Mon profil</a>
                            </li>
                            <li class="nav-item">    
                                <a href="{{ path('user_edit' , { id: app.user.id }) }}">Paramètres</a>
                            </li>

                            {% set role = "ROLE_ADMIN" %}
                            
                            {% if role in app.user.getRoles() %}
                                <li class="nav-item">
                                    <a href="{{ url( 'easyadmin' )}}">Administration</a>
                                </li>
                            {% endif %}

                             {% endif %}
                             {% if app.user %}
